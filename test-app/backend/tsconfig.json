{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "checkJs": false,
    "types": ["reflect-metadata", "jest"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "typeAcquisition": {
    "include": ["jest"]
  },
  "esModuleInterop": true,
  "include": ["./src", "./test", "server.js"]
}
