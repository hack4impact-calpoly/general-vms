{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "checkJs": false,
    "types": ["reflect-metadata", "jest"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "@general-vms/shared": [
        "../shared"
      ],
    }
  },
  "typeAcquisition": {
    "include": ["jest"]
  },
  "esModuleInterop": true,
  "include": ["./src", "./test", "server.js"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
