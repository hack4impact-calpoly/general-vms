{
  "name": "@general-vms/backend",
  "version": "1.0.0",
  "description": "Backend example app.",
  "main": "lib/server.js",
  "engines": {
    "node": ">=14.14.0",
    "npm": ">=7"
  },
  "scripts": {
    "test": "jest",
    "start": "npm run prebuild && ts-node -r tsconfig-paths/register src/server.local.ts",
    "prebuild": "npm run build:shared --prefix=../",
    "build-check": "npm run prebuild && tsc --noEmit",
    "build": "tsc",
    "build:prod": "webpack",
    "copy-assets-for-cdk": "mkdir -p ../cdk-assets && zip -j -r -q ../cdk-assets/backend ./dist/*",
    "postbuild": "npm run copy-assets-for-cdk",
    "dev": "npm run prebuild && nodemon --exec 'ts-node' -r tsconfig-paths/register src/server.local.ts",
    "prepare": "cd .. && npm run prepare",
    "lint-check": "eslint \"src/**/*.{ts,tsx}\" --color --max-warnings=0",
    "lint-fix": "npm run lint-check -- --fix",
    "lint-staged": "lint-staged --config scripts/lint-staged.js",
    "quality-checks": "npm run lint-check && npm run test && npm run build-check",
    "install-and-check": "npm i --ignore-scripts && npm run quality-checks",
    "commit-checks": "npm run lint-staged",
    "push-checks": "npm run quality-checks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hack4impact-calpoly/general-vms.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hack4impact-calpoly/general-vms/issues"
  },
  "homepage": "https://github.com/hack4impact-calpoly/general-vms#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "clean-webpack-plugin": "^4.0.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.2",
    "nodemon": "^2.0.15",
    "superagent": "^7.1.1",
    "supertest": "^6.2.0",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.4.0",
    "tsc-files": "^1.1.3",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.5.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@general-vms/shared": "file:../shared",
    "@types/supertest": "^2.0.11",
    "@vendia/serverless-express": "^4.8.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "inversify": "^6.0.1",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  }
}
