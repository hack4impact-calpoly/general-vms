{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "esnext",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "composite": true,
    "esModuleInterop": true,
    "rootDir": "."
  },
  "include": ["src", "scripts/**.ts", "src/**/*.json"],
  "exclude": ["node_modules", "lib"],
  "references": []
}
